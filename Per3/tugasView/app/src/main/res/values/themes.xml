<resources>

    <!-- Tema untuk seluruh aplikasi -->
    <style name="Theme.TugasView" parent="Theme.MaterialComponents.Light.DarkActionBar">
        <item name="colorPrimary">#FF5722</item>
        <item name="colorPrimaryDark">#E64A19</item>
        <item name="colorAccent">#FF9800</item>
    </style>
    <style name="PicCard">
        <item name="android:scaleType">fitXY</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">260dp</item>
    </style>
    <style name="TextJudul">
        <item name="android:layout_marginBottom">10dp</item>
        <item name="android:textSize">24sp</item>
        <item name="android:textColor">@color/white</item>
    </style>
    <style name="TextDesc">
        <item name="android:textColor">@color/white_blur</item>
        <item name="android:textSize">14dp</item>
        <item name="android:layout_marginTop">14dp</item>
        <item name="android:layout_marginBottom">14dp</item>
        <item name="android:layout_marginEnd">14dp</item>
    </style>

    <!-- Style untuk TextView -->
    <style name="DetailIngre">
        <item name="android:textSize">14dp</item>
        <item name="android:textColor">@color/white_blur</item>
    </style>

    <style name="JudulSaran">
        <item name="android:textSize">23sp</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:layout_marginTop">15dp</item>
        <item name="android:layout_marginStart">15dp</item>
    </style>

    <style name="MieAyamHarga">
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">25dp</item>
    </style>
    <style name="CardSaran">
        <item name="android:layout_marginStart">10dp</item>
        <item name="cardCornerRadius">5dp</item>
        <item name="cardUseCompatPadding">true</item>
    </style>

    <style name="CardSaranJudul">
        <item name="android:textSize">20sp</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:layout_marginStart">5dp</item>
    </style>

</resources>
